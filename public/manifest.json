{
	"name": "南国",
	"version": "1.0.0",
	"description": "支持自定义新标签页的 Chrome 扩展",
	"permissions": ["storage", "tabs"],
	"background": {
		"scripts": ["static/js/background.js"],
		"persistent": false
	},
	"browser_action": {
		"default_icon": {         
			"16": "icons/16.png",
			"32": "icons/48.png",
			"128":"icons/128.png" 
		}
	},
	"chrome_url_overrides" : {
		"newtab": "index.html"
	},
	"icons": [{
		"src": "icons/16.png",
		"sizes": "16x16",
		"type": "image/png"
	  },{
		"src": "icons/48.png",
		"sizes": "48x48",
		"type": "image/png"
	},{
		"src": "icons/128.png",
		"sizes": "128x128",
		"type": "image/png"
	}],
	"manifest_version": 2
}